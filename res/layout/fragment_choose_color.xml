<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:chartview="http://schemas.android.com/apk/res/com.denyszaiats.myreactions"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
            android:id="@+id/txtTitleChooseColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="You need to choose figure with correct color as fast as You are able to recognize it."
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowRadius="4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textStyle="bold"/>

    <Button
            android:id="@+id/startButtonChooseColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleChooseColor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapebutton_selector"
            android:text="@string/start"
            android:textColor="@color/white"/>
        <RelativeLayout
                android:id="@+id/resultsArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitleChooseColor"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible">

                <TextView
                        android:id="@+id/textTimerColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/white"
                        android:textSize="50dp"/>

                <TextView
                        android:id="@+id/textScoreColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="50dp"/>

        </RelativeLayout>
    <RelativeLayout
            android:id="@+id/areaColorAppear"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/startButtonChooseColor" android:layout_marginTop="10dp">

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/areaChooseColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/areaColorAppear"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:gravity="center">

        <RelativeLayout
                android:id="@+id/areaChooseColorAppear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
        </RelativeLayout>

    </RelativeLayout>

    <Button
            android:id="@+id/tryAgainButtonChooseColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shapebutton_selector"
            android:text="@string/try_again"
            android:textColor="@color/white"
            android:visibility="invisible"/>

</RelativeLayout>
